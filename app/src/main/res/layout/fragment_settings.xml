<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0a0e27"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Einstellungen"
                android:textSize="24sp"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Schließen"
                android:textColor="#ffffff"
                android:backgroundTint="#64b5f6" />

        </LinearLayout>

        <!-- Galaxy-Ansicht Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Galaxy-Ansicht"
            android:textSize="18sp"
            android:textColor="#64b5f6"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Galaxy Formatter Toggle -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mobile Galaxy-Ansicht aktivieren"
                android:textSize="14sp"
                android:textColor="#ffffff" />

            <Switch
                android:id="@+id/switchGalaxyFormatter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" />

        </LinearLayout>

        <!-- Galaxy Navigation Toggle -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Galaxie Navigation (Swipe zwischen Systemen)"
                android:textSize="14sp"
                android:textColor="#ffffff" />

            <Switch
                android:id="@+id/switchGalaxyNavigation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" />

        </LinearLayout>

        <!-- Delay Slider -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lade-Verzögerung (Wartezeit bis Formatierung)"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:layout_marginBottom="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <SeekBar
                android:id="@+id/seekBarDelay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="10"
                android:progress="4"
                android:progressTint="#64b5f6"
                android:thumbTint="#64b5f6" />

            <TextView
                android:id="@+id/tvDelayValue"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="200ms"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:gravity="end"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Row Height Slider -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zeilenhöhe"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:layout_marginBottom="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <SeekBar
                android:id="@+id/seekBarRowHeight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="20"
                android:progress="8"
                android:progressTint="#64b5f6"
                android:thumbTint="#64b5f6" />

            <TextView
                android:id="@+id/tvRowHeightValue"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="20px"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:gravity="end"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Generelle UI Anpassung Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generelle UI Anpassung"
            android:textSize="18sp"
            android:textColor="#64b5f6"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <!-- Planet Dropdown ausblenden -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Planeten-Dropdown ausblenden"
                android:textSize="14sp"
                android:textColor="#ffffff" />

            <Switch
                android:id="@+id/switchHidePlanetSelector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" />

        </LinearLayout>

        <!-- Nachrichten-Banner ausblenden -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nachrichten-Banner ausblenden"
                android:textSize="14sp"
                android:textColor="#ffffff" />

            <Switch
                android:id="@+id/switchHideMessageBanner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" />

        </LinearLayout>

        <!-- Info Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="App Info"
            android:textSize="18sp"
            android:textColor="#64b5f6"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvVersion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Version 1.0"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:layout_marginBottom="24dp" />

        <!-- Daten Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Daten"
            android:textSize="18sp"
            android:textColor="#64b5f6"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnClearData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Planeten-Cache löschen (Neu einloggen)"
            android:textColor="#ffffff"
            android:backgroundTint="#e53935"
            android:layout_marginBottom="24dp" />

        <!-- Spenden Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Unterstützen"
            android:textSize="18sp"
            android:textColor="#64b5f6"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gefällt dir die App? Unterstütze die Entwicklung! ☕"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnDonate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="☕ Buy me a coffee"
            android:textColor="#000000"
            android:backgroundTint="#FFDD00"
            android:textStyle="bold"
            android:textSize="16sp" />

    </LinearLayout>

</ScrollView>