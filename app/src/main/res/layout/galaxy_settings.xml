<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Galaxy Formatter -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="8dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/galaxy_formatter"
            android:textSize="14sp"
            android:textColor="#ffffff" />
        <Switch
            android:id="@+id/switchGalaxyFormatter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- Galaxy Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="8dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/galaxy_navigation"
            android:textSize="14sp"
            android:textColor="#ffffff" />
        <Switch
            android:id="@+id/switchGalaxyNavigation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- Loading Delay -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/loading_delay"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <SeekBar
            android:id="@+id/seekBarDelay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="20"
            android:progress="4" />
        <TextView
            android:id="@+id/tvDelayValue"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="200ms"
            android:textColor="#ffffff"
            android:gravity="end"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Row Height -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/row_height"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <SeekBar
            android:id="@+id/seekBarRowHeight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="50"
            android:progress="10" />
        <TextView
            android:id="@+id/tvRowHeightValue"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="30px"
            android:textColor="#ffffff"
            android:gravity="end"
            android:layout_marginStart="8dp" />
    </LinearLayout>

</LinearLayout>
